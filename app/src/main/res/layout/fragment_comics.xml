<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/image1"
            style="@style/CardImageStyle"
            android:layout_width="match_parent"
            android:layout_height="195dp"
            tools:layout_editor_absoluteX="16dp"
            tools:layout_editor_absoluteY="44dp"
            android:src="@color/black"/>

        <TextView
            android:id="@+id/text_view_history_title"
            style="@style/TextStyle.Title.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/marvel_previews_2017"
            />
        <TextView
            android:id="@+id/describtion"
            style="@style/TextStyle.Title.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="@string/description"
          />
        <TextView
            android:id="@+id/text_view_history_first_description"
            style="style/TextStyle.Body.Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="16dp"
            android:text="@string/text_body"/>
        <TextView
            android:id="@+id/text_title"
            style="@style/TextStyle.Title.Large"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:text="Title"
            />
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/title_recycler"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_margin="8dp"
            android:paddingHorizontal="16dp"
            tools:listitem=""/>
    </LinearLayout>
</layout>